{
    "manifest_version": 3,
    "name": "Airtm Pro Sync",
    "version": "4.3",
    "description": "Sincronizaci√≥n profesional v4.3 (New UI Support)",
    "icons": {
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "webRequest"
    ],
    "host_permissions": [
        "https://app.airtm.com/*",
        "https://*.netlify.app/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://app.airtm.com/*"
            ],
            "js": [
                "content-airtm.js"
            ],
            "run_at": "document_start",
            "world": "MAIN"
        },
        {
            "matches": [
                "https://app.airtm.com/*"
            ],
            "js": [
                "airtm-isolated.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*.netlify.app/*",
                "http://localhost/*",
                "http://127.0.0.1/*"
            ],
            "js": [
                "content-bridge.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}