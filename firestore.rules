rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para colecciones públicas (sin autenticación)
    match /settings/{document} {
      allow read, list: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /news/{document} {
      allow read, list: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /poolConfig/{document} {
      allow read, list: if true;
    }
    match /profitabilitySettings/{document} {
      allow read, list: if true;
    }
    match /performanceStats/{document} {
      allow read, list: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Reglas para colecciones que requieren autenticación
    match /users/{userId} {
      // Un usuario autenticado puede leer, crear y actualizar su propio documento
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      // Los administradores tienen acceso completo a todos los documentos de usuario
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Subcolección para los portfolios de trading
      match /portfolios/{portfolioId} {
        // Un usuario autenticado puede leer, crear y actualizar su propio portfolio
        allow read, create, update: if request.auth != null && request.auth.uid == userId;
        allow delete: if false; // Denegar eliminación de portfolios

        // Subcolección para las transacciones del portfolio
        match /transactions/{transactionId} {
          allow read, create: if request.auth != null && request.auth.uid == userId;
          allow update, delete: if false;
        }
      }
    }

    match /miners/{minerId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow list: if request.auth != null; // Permitir listar todos los mineros para usuarios autenticados
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Nota: userBalances ya no es necesario como colección de nivel superior si los balances están en el documento de usuario.
    // Si todavía existe y se usa, mantendría una regla similar.
    match /userBalances/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /withdrawals/{withdrawalId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /arbitragePools/{poolId} {
      allow read: if true;
      // Asumiendo que hay un campo 'ownerId' en arbitragePools
      allow write: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /userArbitragePools/{documentId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /payments/{paymentId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if false;
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /contactRequests/{ticketId} {
      allow read, create, update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Reglas para señales de trading
    match /tradingSignals/{signalId} {
      allow read, list: if request.auth != null; // Los usuarios autenticados pueden leer las señales
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'; // Solo los administradores pueden crear, actualizar y eliminar
    }

    // Reglas para el sistema P2P
    match /p2p_offers/{offerId} {
      allow read, list: if request.auth != null; // Cualquier usuario autenticado puede ver las ofertas
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId; // Solo el propietario puede crear su oferta
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId; // Solo el propietario puede modificar/eliminar su oferta
      // Los administradores también pueden modificar/eliminar si se requiere supervisión
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /p2p_trades/{tradeId} {
      allow create: if request.auth != null; // Cualquier usuario autenticado puede iniciar un trade
      allow read: if request.auth != null && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId); // Solo los participantes pueden leer el trade
      allow update: if request.auth != null && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId); // Los participantes pueden actualizar el trade (ej. confirmar pago, liberar fondos)
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'; // Los administradores también pueden modificar
      allow delete: if false; // Los trades no deben ser eliminados fácilmente, solo cancelados/archivados

      // Nota: La lógica de seguridad detallada para los cambios de estado (ej. sellerReleasesFunds solo si PAGO_CONFIRMADO)
      // debe implementarse en las Cloud Functions, ya que las reglas de seguridad son más limitadas para eso.
    }

    // Reglas para suscripciones VIP
    match /subscriptions/{subscriptionId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Reglas para planes VIP
    match /vipPlans/{planId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Reglas para el historial de trading
    match /tradingHistory/{historyId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Regla general para cualquier otra colección (denegar todo)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
